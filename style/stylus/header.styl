header {
  width: 100%;
  height: 200px;
  .logo {
    width: 500px;
    height: 100%;
    margin: auto;
    background: url('/style/images/name.gif') center center / contain no-repeat;
    animation: logo-animation 1s forwards;
  }
}

@keyframes logo-animation {
  0% {
    opacity: 0;
    transform: scale(1.2)
  }
  100% {
    opacity: 1;
    transform: scale(1)
  }
}
